<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_main"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:layout_marginLeft="@dimen/margin_activity_horizontal"
  android:layout_marginRight="@dimen/margin_activity_horizontal"
  android:elevation="@dimen/elevation_down"
  card_view:cardCornerRadius="4dp">

  <ImageView
    android:id="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_alignParentTop="true"
    android:src="@android:color/darker_gray" />

  <LinearLayout
    android:id="@+id/textLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/black_transparent"
    android:orientation="vertical">

    <TextView
      android:id="@+id/titleTextView"
      style="@style/TextAppearance.AppCompat.Body2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/margin_activity_horizontal"
      android:layout_marginRight="@dimen/margin_activity_horizontal"
      android:layout_marginTop="@dimen/spacing_large"
      android:ellipsize="end"
      android:textColor="@android:color/white"
      tools:text="This is a really big songIndex name big big big big big big big big big 123 big big big big big big big 12big big big big big big big 12" />

    <TextView
      android:id="@+id/dateTextView"
      style="@style/TextAppearance.AppCompat.Caption"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/margin_activity_vertical"
      android:layout_marginLeft="@dimen/margin_activity_horizontal"
      android:layout_marginRight="@dimen/margin_activity_horizontal"
      android:layout_marginTop="@dimen/spacing_small"
      android:ellipsize="end"
      android:textColor="@android:color/white"
      tools:text="Monday, ySeptember 10 2015" />

  </LinearLayout>
</android.support.v7.widget.CardView>